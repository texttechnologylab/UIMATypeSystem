<?xml version="1.0" encoding="UTF-8"?>
<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">

    <name>TypeSystemEssayScore</name>

    <description>Different Features for score Essay</description>

    <version>1.0</version>

    <vendor/>

    <imports>

        <import name="desc.type.TextTechnologyAnnotation"/>

        <import name="desc.type.TypeSystemModelMeta"/>


    </imports>
    <types>
        <typeDescription>
            <name>org.texttechnologylab.annotation.EssayScore</name>
            <description>
                Essay Score Output
            </description>
            <supertypeName>uima.tcas.Annotation</supertypeName>
            <features>
                <featureDescription>
                    <name>Value</name>
                    <description>Metric Feature Value</description>
                    <rangeTypeName>uima.cas.Double</rangeTypeName>
                </featureDescription>

                <featureDescription>
                    <name>Name</name>
                    <description>Metric Feature Name</description>
                    <rangeTypeName>uima.cas.String</rangeTypeName>
                </featureDescription>

                <featureDescription>
                    <name>Reason</name>
                    <description>LLM Reason for chosen Score</description>
                    <rangeTypeName>uima.cas.String</rangeTypeName>
                </featureDescription>


                <featureDescription>
                    <name>InputQuestion</name>
                    <description>Chosen Question Div ID</description>
                    <rangeTypeName>org.texttechnologylab.annotation.AnnotationComment</rangeTypeName>
                </featureDescription>

                <featureDescription>
                    <name>InputAnswer</name>
                    <description>Chosen Answer Div ID</description>
                    <rangeTypeName>org.texttechnologylab.annotation.AnnotationComment</rangeTypeName>
                </featureDescription>

                <featureDescription>
                    <name>InputScene</name>
                    <description>Chosen Scene Div ID</description>
                    <rangeTypeName>org.texttechnologylab.annotation.AnnotationComment</rangeTypeName>
                </featureDescription>

            </features>
        </typeDescription>

        <typeDescription>
            <name>org.texttechnologylab.annotation.model.EssayScoreModel</name>
            <description>
                Essay Score Model Meta Data
            </description>
            <supertypeName>uima.tcas.Annotation</supertypeName>
            <features>
                <featureDescription>

                    <name>model</name>

                    <description/>

                    <rangeTypeName>org.texttechnologylab.annotation.model.MetaData</rangeTypeName>

                </featureDescription>
                <featureDescription>

                    <name>ScoreReference</name>

                    <description/>

                    <rangeTypeName>org.texttechnologylab.annotation.EssayScore</rangeTypeName>

                </featureDescription>
            </features>
        </typeDescription>

        <typeDescription>
            <name>org.texttechnologylab.annotation.model.EssayScoreLLM</name>
            <description>
                Essay Score Model Meta Data LLM with Prompts and all additional information
            </description>
            <supertypeName>org.texttechnologylab.annotation.model.EssayScoreModel</supertypeName>
            <features>
                <featureDescription>

                    <name>ModelName</name>

                    <description>ModelName of used LLM</description>

                    <rangeTypeName>uima.cas.String</rangeTypeName>

                </featureDescription>

                <featureDescription>

                    <name>Response</name>

                    <description>Complete Response of LLM with all kind of Information as Json String</description>

                    <rangeTypeName>uima.cas.String</rangeTypeName>

                </featureDescription>

                <featureDescription>

                    <name>Contents</name>

                    <description>The extracted output of the LLM response</description>

                    <rangeTypeName>uima.cas.String</rangeTypeName>

                </featureDescription>

                <featureDescription>

                    <name>AdditionalInformation</name>

                    <description>Further Information like used port, url and more which are not included in responses</description>

                    <rangeTypeName>uima.cas.String</rangeTypeName>

                </featureDescription>
            </features>
        </typeDescription>


    </types>
</typeSystemDescription>
